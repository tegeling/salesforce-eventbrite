<?xml version="1.0" encoding="UTF-8" ?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CheckContactSyncStatus</fullName>
    <active>true</active>
    <errorConditionFormula
  >AND(ISBLANK(Contact__c), ISPICKVAL(Contact_Sync_Status__c, &apos;Synced&apos;))</errorConditionFormula>
    <errorDisplayField>Contact__c</errorDisplayField>
    <errorMessage
  >Contact record missing when status is &quot;Synced&quot;.</errorMessage>
</ValidationRule>
